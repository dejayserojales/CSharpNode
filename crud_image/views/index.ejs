<!DOCTYPE html>
<html>

<head>
  <title>Students</title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <h1>Student List</h1>
  <center>
    <table>
      <thead>
        <tr>
          <th>Fullname</th>
          <th>Age</th>
          <th>Gender</th>
          <th>Address</th>
          <th>Course</th>
          <th>Profile</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% itstudent.forEach(it=> { %>
          <tr>
            <td>
              <%= it.fullname %>
            </td>
            <td>
              <%= it.age %>
            </td>
            <td>
              <%= it.gender %>
            </td>
            <td>
              <%= it.address %>
            </td>
            <td>
              <%= it.course %>
            </td>
            <td>
              <center><img src="/uploads/<%= it.profile %>"></center>
            </td>
            <td>
              <a href="/update/<%= it.id %>">Edit</a>
              <a href="/delete/<%= it.id %>"
                onclick="return confirm('Are you sure you want to delete this student?')">Delete</a>
            </td>
          </tr>
          <% }); %>

      </tbody>
    </table>
    <a href="/add" style="margin-top: 55px; width: 300px; background-color: #06d6a0;">Add Student</a>
  </center>
</body>

</html>